<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>i18n</var>
        </resource-bundle>
    </application>
    <managed-bean>
    	<managed-bean-name>registerController</managed-bean-name>
    	<managed-bean-class>com.netbuilder.thejuke.web.RegisterController</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>entityManager</managed-bean-name>
    	<managed-bean-class>javax.persistence.EntityManager</managed-bean-class>
    	<managed-bean-scope>none</managed-bean-scope>
    </managed-bean>
</faces-config>